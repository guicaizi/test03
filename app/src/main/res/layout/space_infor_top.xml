<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    >


    <TextView
        android:id="@+id/tv_infor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:text="遇见感觉"
        android:textColor="@color/font_gray_deep"
        android:textSize="@dimen/space_12"/>

    <ImageView
        android:id="@+id/iv_inforicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_10"
        />

    <TextView
        android:id="@+id/tv_infor_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:text="这个用户很懒,没有留下任何信息"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/space_12"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_infor_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="粉丝 4"
            android:textColor="@color/font_gray_deep"
            android:textSize="@dimen/space_12"/>

        <TextView
            android:id="@+id/tv_infor_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space_30"
            android:text="关注 4"
            android:textColor="@color/font_gray_deep"
            android:textSize="@dimen/space_12"/>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:background="@color/line_color_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_infor_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_up"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cricle_icon"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_circle_message"
                    android:layout_alignRight="@+id/iv_up"
                    android:layout_alignTop="@+id/iv_up"
                    android:layout_width="10dp"
                    android:background="@drawable/shape_point_red_two"
                    android:layout_height="10dp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="我的圈子"
                android:textColor="@color/font_gray_deep"
                android:textSize="@dimen/space_12"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_infor_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_up2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_icon"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_action_message"
                    android:layout_alignRight="@+id/iv_up2"
                    android:layout_alignTop="@+id/iv_up2"
                    android:layout_width="10dp"
                    android:background="@drawable/shape_point_red_two"
                    android:layout_height="10dp"/>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="我的活动"
                android:textColor="@color/font_gray_deep"
                android:textSize="@dimen/space_12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_infor_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jifen_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="我的积分"
                android:textColor="@color/font_gray_deep"
                android:textSize="@dimen/space_12"/>
        </LinearLayout>
    </LinearLayout>


</merge>