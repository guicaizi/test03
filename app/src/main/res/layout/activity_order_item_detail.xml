<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_bg"
    android:layout_height="wrap_content">
    <include layout="@layout/include_top"
             android:id="@+id/ic_top"/>
    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@+id/ic_top"
        android:layout_above="@+id/re_bottom_detail"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/re_choice_address"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:layout_marginTop="@dimen/space_10"
                    android:id="@+id/tv_confirm_name"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/space_13"
                    android:textColor="@color/font_color_black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="@dimen/space_15"
                    android:id="@+id/tv_confirm_phone"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/space_13"
                    android:textColor="@color/font_color_black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_confirm_address"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_below="@+id/tv_confirm_name"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/img_adress"
                    android:drawablePadding="@dimen/space_5"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_13"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_moddle"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/tv_oder_tag"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_home"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_toRightOf="@id/tv_oder_tag"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:text="MySpace"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableRight="@drawable/img_back_right"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_state_pay"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="待付款"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textColor="@color/empty_gray"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.yun.software.touhang.ui.main.ViewWidget.NestListView
                android:overScrollMode="never"
                android:orientation="vertical"
                android:background="@color/white"
                android:id="@+id/list_item_content_nlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/re_back_money"
                android:layout_below="@+id/list_item_content_nlv"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_real_tag"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/empty_gray"
                    android:textSize="15dp"
                    android:text="实付款"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_realy_pay"
                    android:layout_alignBottom="@+id/tv_real_tag"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/space_15"
                    android:text="0.01"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_orderno"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:textColor="@color/empty_gray"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_order_create"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:textColor="@color/empty_gray"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_above="@+id/re_bottom_detail"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#CCC"/>
    <LinearLayout
        android:id="@+id/re_bottom_detail"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/space_8"
        android:paddingBottom="@dimen/space_8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_left_tag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="@dimen/space_10"
            android:id="@+id/tv_state_order_cacle"
            android:layout_width="80dp"
            android:height="@dimen/space_30"
            android:gravity="center"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_15"
            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/round_strock_black_shape"
            android:text="取消订单"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_state_order_sure"
            android:layout_width="80dp"
            android:height="@dimen/space_30"
            android:gravity="center"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_15"
            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/round_strock_black_shape"
            android:text="确认收货"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_state_order_contact"
            android:layout_width="80dp"
            android:height="@dimen/space_30"
            android:gravity="center"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_15"
            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/round_strock_black_shape"
            android:text="联系商家"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/space_10"
            android:id="@+id/tv_state_order_pay"
            android:layout_width="40dp"
            android:height="@dimen/space_30"
            android:gravity="center"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_15"
            android:background="@drawable/round_strock_black_shape"
            android:text="付款"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>