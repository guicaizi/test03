<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_top"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/space_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dialog_icon"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_dialog_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="小面霜"
                        android:textColor="@color/font_color_black"
                        android:textSize="@dimen/space_14"/>

                    <TextView
                        android:id="@+id/tv_dialog_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:textColor="@color/red"
                        android:textSize="@dimen/space_14"/>

                    <TextView
                        android:id="@+id/tv_dialog_size"
                        style="@style/normal_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/img_close"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/bottom_lin"/>
        </LinearLayout>

        <com.yun.software.shangcheng.ui.ViewWidget.MaxScollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@color/white"
            android:overScrollMode="never"
            app:mhv_HeightDimen="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/color_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_black"
                    android:textSize="13sp"
                    />
                <com.yun.software.buypop.tabGround.TagContainerLayout
                    android:id="@+id/one_tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/color_label"
                    android:layout_marginTop="@dimen/space_5"
                    app:container_background_color="#00000000"
                    app:container_border_color="#00000000"
                    app:container_border_radius="0dp"
                    app:horizontal_interval="10dp"
                    app:tag_border_color="#000000"
                    app:tag_clickable="true"
                    app:tag_corner_radius="2dp"
                    app:tag_horizontal_padding="10dp"
                    app:tag_max_length="18"
                    app:tag_text_size="12.5sp"
                    app:tag_vertical_padding="8dp"
                    app:vertical_interval="5dp"/>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/one_tag_container"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_5"
                    android:background="@color/backGroundColor"/>
                <TextView
                    android:id="@+id/size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:visibility="visible"/>
                <com.yun.software.buypop.tabGround.TagContainerLayout
                    android:id="@+id/two_tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/size_label"
                    android:layout_marginTop="@dimen/space_5"
                    app:container_background_color="#00000000"
                    app:container_border_color="#00000000"
                    app:container_border_radius="0dp"
                    app:horizontal_interval="10dp"
                    app:tag_border_color="#000000"
                    app:tag_clickable="true"
                    app:tag_corner_radius="2dp"
                    app:tag_horizontal_padding="10dp"
                    app:tag_max_length="18"
                    app:tag_text_size="12.5sp"
                    app:tag_vertical_padding="8dp"
                    app:vertical_interval="5dp"/>
            </RelativeLayout>
        </com.yun.software.shangcheng.ui.ViewWidget.MaxScollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:text="数量"
                android:textColor="@color/font_color_black"
                android:textSize="13sp"/>
            <com.yun.software.shangcheng.ui.ViewWidget.NumberButton
                android:id="@+id/number_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                app:editable="false"
                />
            <TextView
                android:id="@+id/tv_tag_commit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_15"
                android:layout_marginTop="@dimen/space_15"
                android:background="@color/red"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/space_18"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>