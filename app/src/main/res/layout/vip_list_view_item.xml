<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_bg"
        android:layout_width="match_parent"
        android:background="@drawable/round_strock_gray_shape_noraml"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_vip_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/space_14"
                android:textColor="@color/font_gray_deep"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_vip_time"
                android:layout_marginTop="@dimen/space_8"
                android:layout_width="wrap_content"
                android:textSize="@dimen/space_14"
                android:textColor="@color/font_gray"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/album_sp_18"
            android:textColor="@color/yellow_shape"
            android:layout_marginRight="@dimen/space_20"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>