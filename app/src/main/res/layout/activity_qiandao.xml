<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/include_top" />
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:id="@+id/sc"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/space_20"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/circle_qiandao_first_shape"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/circle_qiandao_second_shape"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_chandao"
                    android:drawableTop="@drawable/edit"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/space_10"
                    android:text="点击签到+10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_10"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_qd_continues"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/space_12"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/font_gray_deep"
                    android:text="已连续签到1天"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_qd_score"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/space_12"
                    android:textColor="@color/font_gray_deep"
                    android:text="我的积分44"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <com.yun.software.touhang.ui.main.utils.NoScrollGridView
                android:id="@+id/ng"
                android:layout_width="match_parent"
                android:numColumns="7"
                android:scrollbars="none"
                android:background="@color/white"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:verticalSpacing="5dp"
                android:layout_height="wrap_content">
            </com.yun.software.touhang.ui.main.utils.NoScrollGridView>
            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/font_gray_deep"/>
                <ImageView
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:src="@drawable/lingxin"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_12"
                    android:text="续签到特别奖励"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:src="@drawable/lingxin"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/font_gray_deep"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableBottom="@drawable/gold"
                        android:layout_width="match_parent"
                        android:drawablePadding="@dimen/space_5"
                        android:gravity="center"
                        android:text="+100积分"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/space_12"
                        android:textColor="@color/black"
                        android:text="连续签到7天"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableBottom="@drawable/gold"
                        android:layout_width="match_parent"
                        android:drawablePadding="@dimen/space_5"
                        android:gravity="center"
                        android:text="+400积分"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/space_12"
                        android:textColor="@color/black"
                        android:text="连续签到15天"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableBottom="@drawable/gold"
                        android:layout_width="match_parent"
                        android:drawablePadding="@dimen/space_5"
                        android:gravity="center"
                        android:text="+1000积分"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/space_12"
                        android:textColor="@color/black"
                        android:text="连续签到30天"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>








</LinearLayout>