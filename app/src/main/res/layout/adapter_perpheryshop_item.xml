<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="170dp">


    <LinearLayout
        android:paddingBottom="@dimen/space_5"
        android:paddingTop="@dimen/space_5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="160dp">
    <ImageView
        android:layout_margin="@dimen/space_8"
        android:id="@+id/img_perphery_item_left"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_weight="5"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_perphery_item_des"
            android:layout_width="wrap_content"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_14"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_perphery_service_address"
            android:layout_width="wrap_content"
            android:textColor="@color/font_color_black"
            android:textSize="@dimen/space_14"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:minLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_perphery_item_popularity"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/space_13"
                android:text="人气 0"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="@dimen/space_3"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_width="@dimen/space_1"
                android:background="@color/text_color"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_perphery_item_comments"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/space_14"
                android:text="评论 0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/text_color"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_perphery_item_address"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/space_14"
                android:drawableLeft="@drawable/img_adress"
                android:drawablePadding="@dimen/space_7"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="@dimen/space_3"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_width="@dimen/space_1"
                android:background="@color/text_color"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_perphery_item_more"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/space_14"
                android:text="更多优惠"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>


</LinearLayout>
