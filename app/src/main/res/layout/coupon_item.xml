<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:VoucherView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <com.yun.software.shangcheng.ui.ViewWidget.VoucherView
        android:layout_marginTop="@dimen/space_10"
        android:id="@+id/voucherView"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        VoucherView:drawType="triangle"
        VoucherView:orientation="vertical"
        VoucherView:mGap="1dp"
        VoucherView:mRadius="3dp"
        VoucherView:BgColor="#FFF1F1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:text="￥30"
                    android:textColor="#E47070"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_price_moddle"
                    android:layout_width="wrap_content"
                    android:text="满1000使用"
                    android:textColor="#E47070"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_price_time"
                    android:layout_width="wrap_content"
                    android:textColor="#E47070"
                    android:text="有效期2018.03.20-2018.04.07"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <com.yun.software.shangcheng.ui.ViewWidget.DashView
                android:layout_width="@dimen/space_1"
                VoucherView:dashOrientation="1"
                VoucherView:lineColor="@color/red"
                VoucherView:dashWidth="3dp"
                android:id="@+id/dashview"
                VoucherView:lineWidth="@dimen/space_3"
                VoucherView:lineHeight="@dimen/space_1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="80dp"
                android:text="去使用"
                android:textColor="#E47070"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!--<include-->
        <!--layout="@layout/include_content"/>-->
    </com.yun.software.shangcheng.ui.ViewWidget.VoucherView>


    </LinearLayout>


