<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/vip_list_bg"
              android:layout_height="match_parent">
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        style="@style/PullToRefresh_ptr"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:id="@+id/my_list_oder"
        android:layout_width="match_parent"
        android:divider="@color/vip_list_bg"
        android:background="@color/white"
        android:dividerHeight="8dp"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"/>
    <RelativeLayout
        android:id="@+id/re_nodate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/icon_order_empty"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/empty_gray"
                android:layout_marginTop="@dimen/space_30"
                android:text="您还没有相关订单"
                android:textSize="@dimen/space_15"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
