<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_10"
                    android:text="活动主题："
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

                <EditText
                    android:id="@+id/et_action_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center|left"
                    android:hint="请输入主题名称"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/space_10"
                    android:text="开始时间："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="年-月-日"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_bg"/>

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="时:分"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/space_10"
                    android:text="结束时间："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="年-月-日"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_bg"/>

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="时:分"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_10"
                    android:text="人数限制："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <EditText
                    android:id="@+id/et_action_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingLeft="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_10"
                    android:text="省市区："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <EditText
                    android:id="@+id/et_action_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center|left"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingRight="@dimen/space_5"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

                <ImageView
                    android:layout_width="@dimen/space_1"
                    android:layout_height="match_parent"
                    android:background="#ccc"/>

                <TextView
                    android:id="@+id/tv_action_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:drawableLeft="@drawable/ic_dingwei"
                    android:drawablePadding="@dimen/space_10"
                    android:gravity="center_vertical"
                    android:text="定位"
                    android:textColor="@color/font_color_black"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_10"
                    android:text="详细地址："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <EditText
                    android:id="@+id/et_action_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center|left"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_10"
                    android:text="活动内容："
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <EditText
                    android:id="@+id/et_action_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="top|left"
                    android:hint="请点击填写活动内容"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_10"
                    android:textColor="@color/font_color_black"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="上传图片 "
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(最多可以上传九张)"
                    android:textColor="@color/font_gray_deep"
                    android:textSize="@dimen/space_12"/>
            </LinearLayout>

            <com.yun.software.touhang.ui.main.utils.NoScrollGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="2dp"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_60"
                android:background="@color/red"
                android:gravity="center"
                android:text="创建"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
