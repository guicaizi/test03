<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/activity_shoper_into">

    <EditText
        android:id="@+id/et_really_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请填写真实姓名"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/space_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_bg"/>

    <EditText
        android:id="@+id/et_really_idcard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请填写身份证"
        android:singleLine="true"
        android:textColor="@color/text_color"

        android:textSize="@dimen/space_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_bg"/>

    <EditText

        android:id="@+id/et_really_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请填写Email"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/space_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_bg"/>

    <EditText
        android:id="@+id/et_really_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请填写手机号"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/space_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请填写验证码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/space_13"/>

        <Button
            android:id="@+id/bt_get_smscode"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_30"
            android:layout_gravity="center_vertical"
            android:background="#999999"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/space_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_uncheckone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:text="同意商家入驻协议"
            android:textColor="@color/red"
            android:textSize="@dimen/space_12"/>


    </LinearLayout>
</merge>