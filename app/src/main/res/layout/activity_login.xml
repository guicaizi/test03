<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fl_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btn_login_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/login_sina_press" />

        <Button
            android:id="@+id/btn_login_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/login_qq_press" />
        <Button
            android:id="@+id/btn_login_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/login_weixin_press" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qq_auther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="授权"/>

</RelativeLayout>