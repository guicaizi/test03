<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_mall_item_top"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="205dp"
            />
        <TextView
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_25"
            android:layout_marginRight="@dimen/space_25"
            android:singleLine="true"
            android:id="@+id/tv_product_name"
            android:textSize="@dimen/space_12.5"
            android:textColor="@color/font_color_black"
            android:text="商品描述"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mall_price"
                android:layout_width="wrap_content"
                android:text="¥2.3"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/space_10"
                android:id="@+id/tv_mall_sell"
                android:layout_width="wrap_content"
                android:text="已出售1件"
                android:gravity="center"
                android:textColor="@color/color_light_gray2"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


