<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/activity_product_detial">

    <TextView
        android:layout_margin="@dimen/space_10"
        android:id="@+id/tv_shoper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/text_color_black"
        android:text="MyStyle"
        />

    <ImageView
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="wrap_content"
        android:src="@drawable/img_line"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_danpin"
            android:layout_width="wrap_content"
            style="@style/normal_font"
            android:text="单品    5"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_fan"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_width="wrap_content"
            style="@style/normal_font"
            android:text="粉丝    5"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_into_shop"
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="100dp"
        android:gravity="center"
        android:text="进入店铺"
        android:background="@drawable/round_strock_red_shape"
        android:textColor="@color/red"
        android:layout_height="30dp"/>
</merge>