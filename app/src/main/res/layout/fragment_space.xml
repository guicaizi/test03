<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">


    <FrameLayout

        android:id="@+id/user_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/re_tab" />

    <RelativeLayout
        android:id="@+id/re_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_menu_bg">

        <com.yun.software.daynightmodeutils.MyFragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
        </com.yun.software.daynightmodeutils.MyFragmentTabHost>
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22.5dp"
        android:src="@drawable/img_moddle_two_update" />
    <TextView
        android:layout_marginRight="20dp"
        android:id="@+id/tv_buy"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="ä¹°"
        android:textSize="26sp"
        android:layout_marginTop="200sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:background="@drawable/circle_red_shape"/>
</RelativeLayout>
