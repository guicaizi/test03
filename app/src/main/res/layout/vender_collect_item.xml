<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_vender_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一杯酒"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14"/>

            <TextView
                android:id="@+id/tv_vender_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vender_name"
                android:layout_marginTop="10dp"
                android:text="销量 0"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/space_14"/>

            <TextView
                android:id="@+id/tv_vender_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_vender_sale"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_toRightOf="@+id/tv_vender_sale"
                android:text="收藏  3"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/space_14"/>


        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>


