<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:showIn="@layout/activity_product_detial">

    <include layout="@layout/comment_item_view"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@color/color_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:focusable="false"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_produce_introduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品介绍"
            android:textColor="@color/red"
            android:textSize="@dimen/space_14"
            />

        <TextView
            android:id="@+id/tv_produce_paramter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品参数"
            android:textColor="@color/collection_selector"
            android:textSize="@dimen/space_14"
            />

        <TextView
            android:id="@+id/tv_produce_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="猜你喜欢"
            android:textColor="@color/collection_selector"
            android:textSize="@dimen/space_14"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/text_color"
        android:layout_marginTop="10dp"/>
</merge>